<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MenuOption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:background">@color/selector_transparent_click_grey</item>
    </style>

    <style name="FriendSuggestion">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
        <item name="android:paddingTop">@dimen/default_padding_half</item>
        <item name="android:paddingBottom">@dimen/default_padding_half</item>
        <item name="android:paddingLeft">@dimen/default_padding</item>
        <item name="android:paddingRight">@dimen/default_padding</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.LargeImage" parent="">
        <item name="cornerSize">5%</item>
    </style>
</resources>